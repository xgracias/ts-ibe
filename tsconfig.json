{
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@noble"]
  },
  "include": ["src/**/*.ts"],
  "compileOnSave": true
}
